$("#submitBtn").on("click",function(){
	
	if($(this).prev().val().replace(/\s/g,"")===""){
		alert("책제목입력해 주세요");
		return;
	}
	
	if($("#author").val().replace(/\s/g,"")===""){
			alert("v입력해 주세요");
			return;
		}
		
	if($("#publisher").val().replace(/\s/g,"")===""){
			alert("v입력해 주세요");
			return;
		}


$("#bookForm").attr({
	"action" : "/servletExample/bookInput",
	"method":"post"

});
	$("#bookForm").submit();
});